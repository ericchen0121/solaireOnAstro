---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Our Projects - Rochat Solaire">
  <!-- Hero Section -->
  <section class="hero min-h-screen flex items-center justify-center bg-white">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl md:text-7xl font-bold text-charcoal mb-4">
        Our Projects
      </h1>
      <p class="text-xl md:text-2xl text-charcoal/70">
        Showcasing our solar installations
      </p>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="projects-section min-h-screen flex items-center justify-center bg-charcoal text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl">
        <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center">Featured Installations</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Project cards will be added here -->
          <div class="bg-white/10 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-4">Project Name</h3>
            <p class="text-lg">Project description placeholder</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>



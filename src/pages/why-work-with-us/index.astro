---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Why Work With Us - Rochat Solaire">
  <!-- Hero Section -->
  <section class="hero min-h-screen flex items-center justify-center bg-white">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl md:text-7xl font-bold text-charcoal mb-4">
        Why Work With Us?
      </h1>
      <p class="text-xl md:text-2xl text-charcoal/70">
        Experience and expertise you can trust
      </p>
    </div>
  </section>

  <!-- Content Section -->
  <section class="content-section min-h-screen flex items-center justify-center bg-charcoal text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">Your Trusted Solar Partner</h2>
        <p class="text-lg leading-relaxed">
          With over 18 years of experience and 640+ completed projects, 
          we bring unmatched expertise and commitment to every solar installation. 
          Our award-winning team ensures quality, reliability, and exceptional service.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>



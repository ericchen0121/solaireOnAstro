---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Why Solar - Rochat Solaire">
  <!-- Hero Section -->
  <section class="hero min-h-screen flex items-center justify-center bg-white">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl md:text-7xl font-bold text-charcoal mb-4">
        Why Solar?
      </h1>
      <p class="text-xl md:text-2xl text-charcoal/70">
        Discover the benefits of solar energy
      </p>
    </div>
  </section>

  <!-- Content Section -->
  <section class="content-section min-h-screen flex items-center justify-center bg-charcoal text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">Sustainable Energy for the Future</h2>
        <p class="text-lg leading-relaxed">
          Solar energy is the most abundant renewable energy source available. 
          By harnessing the power of the sun, we can create a sustainable future 
          while reducing our carbon footprint.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>



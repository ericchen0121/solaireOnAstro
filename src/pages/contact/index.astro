---
import BaseLayout from '../layouts/BaseLayout.astro';
import EmailMask from '../../components/react/EmailMask.tsx';
---

<BaseLayout title="Contact Us - Rochat Solaire" isDark={true} orbitNavColorMode="dark">
  <!-- Hero Section -->
  <section class="hero min-h-screen flex items-center justify-center bg-white">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl md:text-7xl font-bold text-charcoal mb-4">
        Contact Us
      </h1>
      <p class="text-xl md:text-2xl text-charcoal/70">
        Get in touch with our team
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section min-h-screen flex items-center justify-center bg-charcoal text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl">
        <h2 class="text-4xl md:text-5xl font-bold mb-8 text-center">Let's Talk</h2>
        <div class="mb-8 text-center">
          <p class="text-lg mb-2">Email us at:</p>
          <EmailMask 
            client:only="react"
            email="contact@rochatsolaire.com" 
            displayText="contact"
            className="text-solar-yellow text-xl font-semibold hover:text-solar-yellow/80"
          />
        </div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-lg mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-solar-yellow"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="email" class="block text-lg mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-solar-yellow"
              placeholder="your.email@example.com"
            />
          </div>
          <div>
            <label for="message" class="block text-lg mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:border-solar-yellow"
              placeholder="Your message"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-solar-yellow text-charcoal px-8 py-4 rounded-lg font-bold text-lg hover:bg-solar-yellow/90 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>


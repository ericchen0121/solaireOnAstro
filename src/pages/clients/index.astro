---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Qui sont nos clients? - Rochat Solaire"
  isDark={false}
  orbitNavColorMode="dark"
>
  <main class="clients-page">
    <section
      class="clients-section min-h-screen bg-white text-black flex items-end justify-center pt-64"
    >
      <div class="container mx-auto px-4 pb-20">
        <div class="content-sections">
          <!-- Propriétaires -->
          <div class="content-item">
            <h2
              class="section-title text-5xl md:text-6xl lg:text-7xl font-light"
            >
              Propriétaires
            </h2>
            <div class="section-detail">
              <p class="text-lg md:text-xl leading-relaxed max-w-2xl">
                de bâtiments qui veulent produire de l'énergie avec leur toit,
                ou le mettre à disposition d'un tiers investisseur: Industriel,
                résidentiel, école, rural et hôpital.
              </p>
            </div>
          </div>

          <!-- Investisseurs -->
          <div class="content-item">
            <h2
              class="section-title text-5xl md:text-6xl lg:text-7xl font-light"
            >
              Investisseurs
            </h2>
            <div class="section-detail">
              <p class="text-lg md:text-xl leading-relaxed max-w-2xl">
                dans l'énergie renouvelable qui cherchent la rentabilité.
              </p>
            </div>
          </div>

          <!-- Entreprises -->
          <div class="content-item">
            <h2
              class="section-title text-5xl md:text-6xl lg:text-7xl font-light"
            >
              Entreprises
            </h2>
            <div class="section-detail">
              <p class="text-lg md:text-xl leading-relaxed max-w-2xl">
                qui veulent produire leur propre énergie.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .clients-page {
    font-family: var(--font-primary);
  }

  /* Vertical stacking */
  .content-sections {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Title + detail stay aligned top-to-bottom */
  .content-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    position: relative;
  }

  .section-title {
    margin: 0;
    padding: 0;
    z-index: 1;
  }

  /* Collapsed by default */
  .section-detail {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    margin-top: 0;
    width: 100%;
    display: flex;
    justify-content: center;

    transition:
      max-height 0.45s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.3s ease-out,
      margin-top 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Expand downward only */
  .content-item:hover .section-detail {
    max-height: 500px;
    opacity: 1;
    margin-top: 1rem;
  }

  .section-detail p {
    color: rgba(0, 0, 0, 0.8);
    margin: 0 auto;
  }
</style>
